
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/appVersion"
        android:text=""/>
        <TextView
        android:id="@+id/txtDevID"
        android:layout_below="@id/appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:text="Device ID"/>
        <ImageButton
        android:contentDescription="@string/app_name"
        android:id="@+id/imgbutton"
        android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
        android:layout_width="85dp"
        android:layout_height="65dp"
        android:background="@drawable/hyline_logo_chick"
        android:scaleType="fitCenter"/>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUserName"
        android:textSize="25dp"
        android:enabled="false"
    />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Default Non Layer"
        android:id="@+id/chkDefaultNonLayer"
        android:enabled="false"
    />
    <LinearLayout
        android:id="@+id/LLExternalData"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <CheckBox
            android:paddingVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="External Location"
            android:id="@+id/chkExternal"
            android:enabled="false"
        />        
        <RadioGroup
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="40dp">
                <RadioButton
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_marginLeft="30dp"
                android:layout_height="30dp"
                android:textSize="21dp"
                android:text="English"
                android:enabled="false"
                android:id="@+id/RadEN" />
                <RadioButton
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="30dp"
                android:textSize="21dp"
                android:text="@string/title_SP"
                android:enabled="false"
                android:id="@+id/RadSP" />
        </RadioGroup>
    </LinearLayout>
    <TextView
        android:id="@+id/lblPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginTop="15dp"
        android:text="Password"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:textSize="25dp"
        android:id="@+id/txtAppPassword" />
    <Button
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textSize="20dp"
        android:id="@+id/saveButtonUsernamePassword"
        android:layout_marginBottom="15dp"
        android:text="Save"/>
    <Button
        android:text="Refresh Initials"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textSize="20dp"
        android:id="@+id/refreshInitials"
        android:layout_marginBottom="0.0dp" />
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" 
    />
</LinearLayout>